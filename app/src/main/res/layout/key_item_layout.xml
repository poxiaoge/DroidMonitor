<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="40dp">

    <TextView
        android:id="@+id/key_session_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:text="名字: "
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="@dimen/item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/key_goods_name"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/item_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="价格下限: "
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="@dimen/item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/key_start_price"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:text="价格上限: "
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="@dimen/item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/key_end_price"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/item_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="监视间隔(ms): "
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="@dimen/item_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/key_monitor_interval"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/item_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>